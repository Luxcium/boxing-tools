{
  "name": "api-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docker:build": "docker build --label image:api-server --progress plain --tag server-api:latest .",
    "docker:run": "docker run --network networkOne -l 'container:api-server' --name api-server -d --rm -p 3000:80 server-api:latest",
    "docker:run:local": "docker run --network networkOne -l 'local:api-server' --name api-server -d --rm --cpus 4 -p 3000:80 server-api:latest",
    "docker:run:live": "docker run --network networkOne -l 'live:api-server' --name api-server -t -i --rm --cpus 4 -p 3000:80 server-api:latest",
    "docker:build:run": "npm run docker:build && npm run docker:run",
    "docker:build:run:local": "npm run docker:build && npm run docker:run:local",
    "docker:build:run:live": "npm run docker:build && npm run docker:run:live",
    "docker:rerun": "docker stop api-server && npm run docker:run",
    "docker:rerun:local": "docker stop api-server && npm run docker:run:local",
    "docker:rerun:live": "docker stop api-server && npm run docker:run:live",
    "docker:stop": "docker stop api-server",
    "build:prod": "nest build --tsc",
    "deploy": "rimraf dist; nest build --tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.11",
    "@nestjs/platform-express": "^9.0.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "webpack": "^5.74.0",
    "tslib": "2.4.0",
    "@luxcium/redis-services": "workspace:*",
    "@luxcium/phash-compute": "workspace:*",
    "@luxcium/scan-dirs": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/eslint-config-prettier": "6.11.0",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/express": "^4.17.13",
    "@types/node": "16",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "~5.40.1",
    "@typescript-eslint/parser": "~5.40.1",
    "eslint": "~8.26.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-import-resolver-typescript": "~3.5.2",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jsdoc": "~39.3.14",
    "eslint-plugin-jsonc": "~2.4.0",
    "eslint-plugin-prettier": "~4.2.1",
    "eslint-plugin-simple-import-sort": "~8.0.0",
    "eslint-plugin-unicorn": "~44.0.2",
    "nodemon": "~2.0.20",
    "prettier": "~2.7.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-loader": "^9.2.3",
    "ts-node": "~10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "~4.8.4",
    "eslint-plugin-react": "~7.31.10",
    "eslint-plugin-react-hooks": "~4.6.0",
    "@rushstack/heft": "~0.48.6",
    "@rushstack/heft-jest-plugin": "~0.3.43",
    "@types/heft-jest": "1.0.3",
    "jest": "~29.2.1",
    "@types/jest": "29.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
