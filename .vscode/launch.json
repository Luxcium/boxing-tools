{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Next.js",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "BROWSER": "none" // Prevents Next.js from opening the browser automatically
      },
      "cwd": "${workspaceFolder}/frontend/home"
    }
  ]
}
